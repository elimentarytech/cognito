{
    "manifest_version": 3,
    "name": "Stickr AI",
    "version": "1.0.0",
    "description": "AI-powered comments and notes for Power BI, Grafana and other dashboard visualizations",
    "permissions": [
      "storage",
      "activeTab",
      "tabs"
    ],
    "host_permissions": [
      "https://app.powerbi.com/*",
      "https://*.powerbi.com/*",
      "https://*.grafana.com/*",
      "https://*.grafana.net/*",
      "http://localhost:3000/*",
      "https://play.grafana.org/*",
      "https://*.supabase.co/*",
      "https://*.atlassian.net/*",
      "https://api.openai.com/*",
      "https://api.anthropic.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://app.powerbi.com/*",
          "https://*.powerbi.com/*",
          "https://*.grafana.com/*",
          "https://*.grafana.net/*",
          "http://localhost:3000/*",
          "https://play.grafana.org/*"
        ],
        "js": ["html2canvas.min.js", "database.js", "integrations.js", "content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["sidebar.html", "generated-image-Photoroom.png"],
        "matches": ["<all_urls>"]
      }
    ]
}